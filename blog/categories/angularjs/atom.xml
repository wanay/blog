</span><span class='line'>    angular.module('myapp', []).controller('Ctrl', function ($scope){
</span><span class='line'>        $scope.models = ['May Myat Noe','Khin Wint War','Nang Khin Zayar','Zun Thin Zar','Zar Zar Htet','Thu Zar Maung'];
